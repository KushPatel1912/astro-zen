---
import Section from "./Section.astro";
import type { ProjectProps } from "@types";

interface Props {
  projects: ProjectProps[];
}

const { projects } = Astro.props;
---

<Section text="Featured Projects" href="projects">
  {
    projects.map(({ name, summary, linkPreview, linkSource }, index) => (
      <div class="mb-12 rounded-2xl border border-neutral/20 bg-black">
        <div class="relative z-[1] rounded-2xl bg-[#1c232d]/85 px-8 py-12">
          <h3 class="mb-6 font-serif text-3xl font-medium text-primary">
            {name}
          </h3>
          <p class="mb-8 text-lg text-neutral">{summary}</p>
          <div class="flex gap-6 text-white">
            <a
              href={linkSource}
              target="_blank"
              class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
            >
              Source
            </a>
            <a
              href={linkPreview}
              target="_blank"
              class="after:relative after:bottom-[-5px] after:content-[url(/external.svg)] hover:underline"
            >
              Preview
            </a>
          </div>
        </div>
      </div>
    ))
  }
</Section>
